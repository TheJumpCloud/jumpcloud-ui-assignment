{{#if isEditing}}
  {{edit-todo-item value=todo.description
      focus-out=(action 'save' todo)
      insert-newline=(action 'save' todo)}}
{{else}}
  <input type='checkbox' checked={{todo.done}} class='toggle' onchange={{action 'toggleDone' todo}}>
  <label {{action 'edit' on='doubleClick'}}>{{todo.description}}</label>
{{/if}}
